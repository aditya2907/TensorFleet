# TensorFleet Production Environment Configuration

# Application Environment
NODE_ENV=production
REACT_APP_ENV=production

# API Gateway Configuration
REACT_APP_API_BASE_URL=https://api.tensorfleet.com
REACT_APP_API_GATEWAY_URL=https://api.tensorfleet.com/api

# Service URLs
REACT_APP_ML_SERVICE_URL=https://ml.tensorfleet.com
REACT_APP_STORAGE_SERVICE_URL=https://storage.tensorfleet.com
REACT_APP_MONITORING_SERVICE_URL=https://monitoring.tensorfleet.com
REACT_APP_ORCHESTRATOR_SERVICE_URL=https://orchestrator.tensorfleet.com

# Database Configuration (MongoDB Atlas or managed instance)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/tensorfleet_prod?retryWrites=true&w=majority
MONGODB_DATABASE=tensorfleet_prod

# Redis Configuration (Redis Cloud or managed instance)
REDIS_URL=rediss://username:password@redis-cluster.cloud.redislabs.com:port
REDIS_DB=0

# Authentication & Security
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRY=24h
CORS_ORIGIN=https://tensorfleet.com,https://www.tensorfleet.com

# File Storage (AWS S3, Google Cloud Storage, or similar)
STORAGE_PATH=s3://tensorfleet-prod-storage
UPLOAD_MAX_SIZE=1GB
ALLOWED_FILE_TYPES=.csv,.json,.txt,.parquet,.h5,.pkl

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Model Training
DEFAULT_WORKER_COUNT=4
MAX_CONCURRENT_JOBS=20
TRAINING_TIMEOUT=7200000

# Monitoring & Metrics
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_ENDPOINT=https://prometheus.tensorfleet.com

# Production Features
ENABLE_DEBUG=false
ENABLE_MOCK_DATA=false
SHOW_PERFORMANCE_LOGS=false
ENABLE_DEV_TOOLS=false

# External Services (Production)
TENSORBOARD_URL=https://tensorboard.tensorfleet.com
GRAFANA_URL=https://grafana.tensorfleet.com

# Email Configuration (Production - using SendGrid, AWS SES, etc.)
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=587
SMTP_USER=${SMTP_USER}
SMTP_PASS=${SMTP_PASS}
EMAIL_FROM=noreply@tensorfleet.com

# Notification Settings
ENABLE_NOTIFICATIONS=true
NOTIFICATION_WEBHOOK_URL=${NOTIFICATION_WEBHOOK_URL}

# Rate Limiting (More restrictive in production)
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=60

# Docker Configuration
COMPOSE_PROJECT_NAME=tensorfleet-prod
DOCKER_NETWORK=tensorfleet-prod-network

# Production Database Settings
SEED_DATABASE=false
CREATE_SAMPLE_DATA=false

# SSL/TLS Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/tensorfleet.crt
SSL_KEY_PATH=/etc/ssl/private/tensorfleet.key

# CDN Configuration
CDN_URL=https://cdn.tensorfleet.com
STATIC_ASSETS_URL=https://assets.tensorfleet.com

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_URL=s3://tensorfleet-backups

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5
HEALTH_CHECK_RETRIES=3

# Scaling Configuration
AUTO_SCALING_ENABLED=true
MIN_INSTANCES=2
MAX_INSTANCES=10
CPU_THRESHOLD=70
MEMORY_THRESHOLD=80
