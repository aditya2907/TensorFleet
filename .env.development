# TensorFleet Development Environment Configuration

# Application Environment
NODE_ENV=development
REACT_APP_ENV=development

# API Gateway Configuration
REACT_APP_API_BASE_URL=http://localhost:8080
REACT_APP_API_GATEWAY_URL=http://localhost:8080/api

# Service URLs
REACT_APP_ML_SERVICE_URL=http://localhost:8081
REACT_APP_STORAGE_SERVICE_URL=http://localhost:8082
REACT_APP_MONITORING_SERVICE_URL=http://localhost:8083
REACT_APP_ORCHESTRATOR_SERVICE_URL=http://localhost:8084

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/tensorfleet_dev
MONGODB_DATABASE=tensorfleet_dev

# Redis Configuration (for caching and job queues)
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# Authentication & Security
JWT_SECRET=dev-jwt-secret-key-change-in-production
JWT_EXPIRY=24h
CORS_ORIGIN=http://localhost:3000

# File Storage
STORAGE_PATH=./data/dev
UPLOAD_MAX_SIZE=100MB
ALLOWED_FILE_TYPES=.csv,.json,.txt,.parquet,.h5

# Logging
LOG_LEVEL=debug
LOG_FORMAT=dev

# Model Training
DEFAULT_WORKER_COUNT=2
MAX_CONCURRENT_JOBS=5
TRAINING_TIMEOUT=3600000

# Monitoring & Metrics
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_ENDPOINT=http://localhost:9090

# Development Features
ENABLE_DEBUG=true
ENABLE_MOCK_DATA=true
SHOW_PERFORMANCE_LOGS=true
ENABLE_DEV_TOOLS=true

# External Services (Development)
TENSORBOARD_URL=http://localhost:6006
GRAFANA_URL=http://localhost:3001

# Email Configuration (Development - using maildev)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@tensorfleet-dev.local

# Notification Settings
ENABLE_NOTIFICATIONS=true
NOTIFICATION_WEBHOOK_URL=

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Docker Configuration
COMPOSE_PROJECT_NAME=tensorfleet-dev
DOCKER_NETWORK=tensorfleet-dev-network

# Development Database Seeds
SEED_DATABASE=true
CREATE_SAMPLE_DATA=true
